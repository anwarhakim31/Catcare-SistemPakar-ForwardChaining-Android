<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".RiwayatFragment">



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:text="Tentang Kami"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="24dp"
        />




    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catcare adalah sebuah aplikasi sistem pakar yang digunakan untuk mendiagnosis penyakit kulit pada kucing menggunakan metode Forward Chaining, dan dapat diakses melalui platform Android. Tujuannya adalah untuk memberikan bantuan cepat dan akurat dalam mengidentifikasi serta memberikan solusi terkait masalah kulit yang dialami oleh kucing, sehingga memungkinkan pemilik kucing atau petugas kesehatan hewan untuk memberikan perawatan yang tepat dan cepat kepada hewan peliharaan mereka."
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/colorWhite"
            android:lineHeight="25dp"
            android:textColor="@android:color/black" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/copyright"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"

        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Catcare 2024 Â© Anwar Hakim. All Right Reserved."
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</RelativeLayout>